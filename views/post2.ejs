<!DOCTYPE html>
<html>

<head>
    <title>Status</title>
    <meta charset="utf-8">
    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();
        socket.emit("new_user", '<%=post._id%>');
    </script>
    <link rel="stylesheet" type="text/css" href="/public/CSS/post.css">
    <%- include('header') -%>
</head>
<body>
    <%- include('navbar') -%>
    <div class="container-fluid gedf-wrapper">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6 gedf-main">
                <div class="card gedf-card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="mr-2">
                                    <img class="rounded-circle" width="45" height="45"
                                        src="/public/image/avatar/<%=post.avatar%>" alt="">
                                </div>
                                <div class="ml-2">
                                    <div class="h5 m-0"><a href="/profile/<%=post.username%>"><%=post.username%></a>
                                    </div>
                                    <div class="h7 text-muted"><%=post.fullname%></div>
                                </div>
                            </div>
                            <div>
                                <div class="dropdown">
                                    <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-ellipsis-h"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                                        <div class="h6 dropdown-header">Configuration</div>
                                        <a class="dropdown-item" href="#">Save</a>
                                        <a class="dropdown-item" href="#">Hide</a>
                                        <a class="dropdown-item" href="#">Report</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o">
                                <%  let day=new Date().getDate(); let hour=new Date().getHours(); let minutes=new Date().getMinutes(); %>
                                <% if(day-post.date.day <1){ %>
                                <% if(hour-post.date.time_hours<=1){ %>

                                <% if(post.date.time_minutes>minutes){ %>
                                about <%=minutes-post.date.time_minutes+60%> min ago
                                <%}else{%>
                                <% if(minutes-post.date.time_minutes<1){ %>
                                just now
                                <% }else{ %>
                                <% if(minutes>post.date.time_minutes){ %>
                                about <%=minutes-post.date.time_minutes%> min ago
                                <% } %>
                                <% } %>
                                <% } %>
                                <%}else{%>
                                about <%=hour-post.date.time_hours%> h ago
                                <%}%>
                                <% }else{ %>
                                about <%=day-post.date.day%> d ago
                                <%} %>
                            </i></div>
                        <a class="card-link" href="/post/<%= post._id %>">
                            <p class="card-text" style="color: black;font-size: 32px;"><%=post.description%></p>
                            <% if(post.image!="") { %>
                            <img src="/public/image/<%= post.image %>"
                                style="height: 100%;width: 100%; top: 0; left: 0">
                            <%    }   %>
                        </a>
                        <br>
                        <div class="timeline-likes" style="margin-top: 20px;">
                            <div class="stats-right">
                                <span class="stats-text">2 Shares</span>
                                <% if(post.comment.length>0){ %>
                                <span class="stats-text" id="commentcount"><%=post.comment.length%> Comments</span>
                                <% }else{ %>
                                <span class="stats-text" id="commentcount"></span>
                                <%} %>
                            </div>
                            <div class="stats">
                                <span class="fa-stack fa-fw stats-icon">
                                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                                    <i class="fa fa-thumbs-up fa-stack-1x fa-inverse"></i>
                                </span>
                                <span class="stats-text" id="likeCount-<%=post._id%>"><%=1+post.like.length%></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-3">
                                <label for="like-<%=post._id%>">
                                    <% if(post.like.includes(userSession.name)==true){ %>
                                        <i class="fa fa-gittip" id="Like-<%=post._id%>" style="color: blue; cursor:pointer;"> Like</i>
                                    <% }else{ %>
                                    <i class="fa fa-gittip" id="Like-<%=post._id%>" style="color: #777474; cursor:pointer;"> Like</i>
                                    <% } %>
                                </label>
                                <button id="like-<%=post._id%>" class="like_count" style="display: none;" type="button" ></button>
                            </div>
                            <div class="col-sm-6" style="text-align: center;">
                                <a href="#" class="card-link" style="color: #777474; "><i class="fa fa-comment"></i>
                                    Comment</a>
                            </div>
                            <div class="col-sm-3" style="text-align: right;">
                                <a href="#" class="card-link" style="color: #777474; "><i
                                        class="fa fa-mail-forward"></i> Share</a>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white p-2">
                        <div id="comment_frame">
                            <% if(post.comment.length> 0){ %>
                            <% if(post.comment.length> 0){
                            post.comment.forEach(com=>{ %>
                            <p>
                            <div class="d-flex flex-row align-items-start"
                                style=" font-size: 18px;  ">
                                <img class="rounded-circle" src="/public/image/avatar/<%=com.avatarcomment%>" width="32"
                                    height="32">
                                
                                <div style="border-radius: 12px; border: 2px solid #e6e7e9; background-color: #F2F3F5; padding: 1px 8px 1px 8px; margin-left: 5px;">
                                    <a href="/profile/<%=com.commentuser%>"
                                        style="font-size: 18px;"><%=com.commentuser%></a>
                                        <br>
                                    <%=com.comment%>
                                </div>
                            </div>
                            </p>
                                <% })
                             } 
                         } %>
                        </div>
                    </div>
                    <form id="commentForm">
                        <div id="collapse-1" class="bg-light p-2 collapse show" data-parent="#myGroup">
                            <div class="d-flex flex-row align-items-start"><img class="rounded-circle" src="/public/image/avatar/<%=userSession.avatar%>" width="35" height="35">
                                <div class="input-group ">
                                    <input type="text" id="commentInput" class="form-control "
                                        placeholder="Write a comment...">
                                    <span class="input-group-btn p-l-10">
                                        <button class="btn btn-primary f-s-12 " type="submit">Comment</button>
                                    </span>
                                </div>

                            </div>
                        </div>
                    </form>
                    <%- include('realtime_posts') -%>           
                </div>
            </div>
        </div>
    </div>
</body>
</html>